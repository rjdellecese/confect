{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Confect",
  "colors": {
    "primary": "#C026D3",
    "light": "#F9A8D4",
    "dark": "#BE185D"
  },
  "background": {
    "color": {
      "light": "#FAFAF9",
      "dark": "#1C1917"
    }
  },
  "icons": {
    "library": "lucide"
  },
  "logo": "/logo.svg",
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "icon": "layers",
          "anchor": "Effect Docs",
          "href": "https://effect.website/docs"
        },
        {
          "icon": "database",
          "anchor": "Convex Docs",
          "href": "https://docs.convex.dev"
        }
      ]
    },
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "getting-started/introduction",
          "getting-started/quickstart",
          "getting-started/project-structure",
          "getting-started/services",
          "getting-started/schema-restrictions"
        ]
      },
      {
        "group": "Platform",
        "pages": [
          {
            "icon": "square-function",
            "group": "Functions",
            "pages": ["platform/functions/overview"]
          },
          {
            "icon": "database",
            "group": "Database",
            "pages": [
              "platform/database/reading",
              "platform/database/writing",
              "platform/database/system-tables"
            ]
          },
          "platform/http",
          "platform/storage",
          "platform/scheduling",
          "platform/authentication",
          "platform/search",
          "platform/components"
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "icon": "github",
        "label": "GitHub",
        "href": "https://github.com/rjdellecese/confect"
      },
      {
        "icon": "npm",
        "label": "npm",
        "href": "https://www.npmjs.com/package/@rjdellecese/confect"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
}
