{
  "scripts": {
    "build": "pnpm -r --filter='@rjdellecese/*' build",
    "build:confect": "pnpm --filter @rjdellecese/confect build",
    "build:docs": "pnpm --filter docs build",
    "build:example": "pnpm --filter example build",
    "dev": "pnpm -r --parallel dev",
    "dev:confect": "pnpm --filter @rjdellecese/confect dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:example": "pnpm --filter example dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:confect": "pnpm --filter @rjdellecese/confect lint",
    "lint:docs": "pnpm --filter docs lint",
    "lint:example": "pnpm --filter example lint",
    "fix": "pnpm -r fix",
    "test": "pnpm -r test",
    "release": "pnpm build:confect && changeset publish",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "effect",
    "convex"
  ],
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@changesets/config": "3.1.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@rjdellecese/confect": "link:packages/confect"
  }
}
