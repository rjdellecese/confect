{
  "scripts": {
    "build": "pnpm -r --filter='@confect/*' build",
    "build:core": "pnpm --filter @confect/core build",
    "build:server": "pnpm --filter @confect/server build",
    "build:react": "pnpm --filter @confect/react build",
    "dev": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter @confect/core dev",
    "dev:server": "pnpm --filter @confect/server dev",
    "dev:react": "pnpm --filter @confect/react dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:example": "pnpm --filter example dev",
    "typecheck": "pnpm -r typecheck",
    "typecheck:core": "pnpm --filter @confect/core typecheck",
    "typecheck:server": "pnpm --filter @confect/server typecheck",
    "typecheck:react": "pnpm --filter @confect/react typecheck",
    "typecheck:docs": "pnpm --filter docs typecheck",
    "typecheck:example": "pnpm --filter example typecheck",
    "lint": "pnpm -r lint",
    "lint:core": "pnpm --filter @confect/core lint",
    "lint:server": "pnpm --filter @confect/server lint",
    "lint:react": "pnpm --filter @confect/react lint",
    "lint:docs": "pnpm --filter docs lint",
    "lint:example": "pnpm --filter example lint",
    "fix": "pnpm -r fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:core": "vitest run --project @confect/core",
    "test:server": "vitest run --project @confect/server",
    "release": "pnpm build && changeset publish",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "effect",
    "convex"
  ],
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@changesets/config": "3.1.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "24.10.1",
    "eslint": "^9.39.2",
    "eslint-plugin-mdx": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@confect/core": "link:packages/core",
    "@confect/react": "link:packages/react",
    "@confect/server": "link:packages/server"
  }
}
