{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ],
    "importsNotUsedAsValues": "remove",
    "exactOptionalPropertyTypes": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  },
  "exclude": [
    "coverage",
    "dist",
    "docs",
    "example",
    "node_modules",
    "test/convex"
  ],
  "extends": ["@tsconfig/strictest/tsconfig"]
}
