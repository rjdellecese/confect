{
	"name": "@rjdellecese/confect",
	"version": "0.0.18",
	"description": "Use Effect with Convex!",
	"repository": {
		"type": "git",
		"url": "https://github.com/rjdellecese/confect.git"
	},
	"bugs": {
		"url": "https://github.com/rjdellecese/confect/issues"
	},
	"homepage": "https://rj-dellecese.gitbook.io/confect",
	"sideEffects": false,
	"type": "module",
	"files": [
		"src",
		"dist",
		"README.md",
		"LICENSE"
	],
	"exports": {
		"./server": {
			"import": {
				"types": "./dist/server/index.d.ts",
				"import": "./dist/server/index.js"
			},
			"require": {
				"types": "./dist/server/index.d.cts",
				"require": "./dist/server/index.cjs"
			}
		},
		"./react": {
			"import": {
				"types": "./dist/react/index.d.ts",
				"import": "./dist/react/index.js"
			},
			"require": {
				"types": "./dist/react/index.d.cts",
				"require": "./dist/react/index.cjs"
			}
		}
	},
	"scripts": {
		"start": "convex dev",
		"lint": "biome ci --error-on-warnings",
		"fix": "biome check --write",
		"test": "vitest --run --typecheck --coverage",
		"test:watch": "vitest --typecheck --coverage",
		"build": "tsup",
		"release": "pnpm build && changeset publish"
	},
	"keywords": [
		"effect",
		"convex"
	],
	"author": "RJ Dellecese",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "2.27.9",
		"@effect/platform-node": "0.64.14",
		"@effect/vitest": "0.13.8",
		"@swc/jest": "0.2.37",
		"@tsconfig/strictest": "2.0.5",
		"@types/node": "^22.8.6",
		"@vitest/coverage-v8": "2.1.4",
		"convex-test": "0.0.33",
		"dotenv": "16.4.5",
		"tsup": "8.3.5",
		"typescript": "5.6.3",
		"vite": "5.4.10",
		"vite-tsconfig-paths": "5.1.2",
		"vitest": "2.1.4"
	},
	"peerDependencies": {
		"@effect/platform": "^0.69.13",
		"convex": "^1.17.0",
		"effect": "^3.10.8"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	}
}
