{
  "name": "@rjdellecese/confect",
  "version": "0.0.28",
  "description": "Use Effect with Convex!",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjdellecese/confect.git"
  },
  "bugs": {
    "url": "https://github.com/rjdellecese/confect/issues"
  },
  "homepage": "https://rj-dellecese.gitbook.io/confect",
  "sideEffects": false,
  "type": "module",
  "files": [
    "src",
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "import": "./dist/server/index.js"
      },
      "require": {
        "types": "./dist/server/index.d.cts",
        "require": "./dist/server/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.ts",
        "import": "./dist/react/index.js"
      },
      "require": {
        "types": "./dist/react/index.d.cts",
        "require": "./dist/react/index.cjs"
      }
    },
    "./react/effect-atom": {
      "import": {
        "types": "./dist/react/effect-atom.d.ts",
        "import": "./dist/react/effect-atom.js"
      },
      "require": {
        "types": "./dist/react/effect-atom.d.cts",
        "require": "./dist/react/effect-atom.cjs"
      }
    },
    "./react/effect": {
      "import": {
        "types": "./dist/react/effect.d.ts",
        "import": "./dist/react/effect.js"
      },
      "require": {
        "types": "./dist/react/effect.d.cts",
        "require": "./dist/react/effect.cjs"
      }
    }
  },
  "bin": {
    "confect": "./bin/confect-cli"
  },
  "scripts": {
    "build": "tsdown",
    "postinstall": "pnpm build:cli",
    "build:cli": "pnpm dlx bun build --compile --outfile=bin/confect-cli ./src/cli/main.ts",
    "check-bundled-types": "pnpm build && attw --pack --profile=node16",
    "convex-codegen": "pnpm convex codegen",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "fix": "prettier --write . && eslint --fix . --max-warnings=0",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "test": "vitest --run --typecheck --coverage",
    "test:watch": "vitest --typecheck --coverage",
    "clean": "rm -rf dist coverage node_modules"
  },
  "keywords": [
    "effect",
    "convex"
  ],
  "author": "RJ Dellecese",
  "license": "ISC",
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@effect/cluster": "0.46.3",
    "@effect/experimental": "0.54.4",
    "@effect/language-service": "0.35.0",
    "@effect/platform-node": "0.94.1",
    "@effect/platform-bun": "0.78.0",
    "@effect/rpc": "0.68.3",
    "@effect/sql": "0.44.0",
    "@effect/vitest": "0.25.0",
    "@effect/cli": "0.69.0",
    "@effect/workflow": "^0.8.2",
    "@eslint/js": "9.32.0",
    "@swc/jest": "0.2.39",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "3.2.4",
    "@types/react": "~19.0.10",
    "convex-test": "0.0.38",
    "dotenv": "17.2.1",
    "eslint": "9.32.0",
    "prettier": "3.6.2",
    "tsdown": "0.13.3",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0",
    "vite": "7.1.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "@effect/platform": "^0.90.0",
    "@effect-atom/atom": "0.1.5",
    "@effect-atom/atom-react": "0.1.3",
    "convex": "^1.25.4",
    "@convex-dev/react-query": "0.0.0-alpha.11",
    "effect": "^3.17.6"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  }
}
