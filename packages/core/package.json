{
  "name": "@confect/core",
  "version": "1.0.0",
  "description": "Shared specs and schemas used by all Confect packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjdellecese/confect.git"
  },
  "bugs": {
    "url": "https://github.com/rjdellecese/confect/issues"
  },
  "homepage": "https://confect.dev",
  "sideEffects": false,
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "package.json",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./package.json": "./package.json",
    "./internal/*": null
  },
  "scripts": {
    "build": "tsdown --config-loader unrun",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "fix": "prettier --write . && eslint --fix . --max-warnings=0",
    "format": "prettier --check .",
    "lint": "eslint . --max-warnings=0",
    "bench": "tsx test/Refs.bench.ts",
    "clean": "rm -rf dist coverage node_modules",
    "prepack": "rm -f ./README.md && cp ../../README.md ./README.md",
    "postpack": "rm ./README.md && ln -s ../../README.md ./README.md"
  },
  "keywords": [
    "effect",
    "convex"
  ],
  "author": "RJ Dellecese",
  "license": "ISC",
  "devDependencies": {
    "@ark/attest": "0.56.0",
    "@effect/language-service": "0.73.1",
    "@effect/vitest": "0.27.0",
    "@eslint/js": "9.39.2",
    "@types/node": "25.2.3",
    "effect": "3.19.16",
    "eslint": "9.39.2",
    "prettier": "3.8.1",
    "tsdown": "0.20.3",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "convex": "^1.30.0",
    "effect": "^3.19.16"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
